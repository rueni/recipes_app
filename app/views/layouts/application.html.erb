<!DOCTYPE html>
<html>
<head>
  <title>RecipesApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="sidebar">
		<div id="logo">
			<%= link_to root_path do %>
			<% end %>
		</div>

		<ul>
			<li class="category">Website</li>
			<li><%= link_to "Recipes", root_path %></li>
		</ul>

		<ul>
			<li class="category">Social</li>
			<li><a href="https://twitter.com/ckim79">Twitter</a></li>
			<li><a href="http://instagram.com/rueni">Instagram</a></li>
			<li><a href="https://github.com/rueni">Github</a></li>
			<li><a href="mailto:ck0825@yahoo.com">Email</a></li>
		</ul>
    <% if !user_signed_in? %>
    <p class=sign_in>Admin Login</p>
    <% end %>
	</div>
  <div id="main_content">
      <div id="header">
        <% if current_page?(root_path) %>
          <p>My Recipes</p>
          <% else %>
          <%= link_to "Back to Recipe List", root_path %>
          <% end %>
        <% if user_signed_in? %>
        <div class="buttons">
          <button type="button" class="button"><%= link_to "New Recipe", new_recipe_path %></button>
          <button type="button" class="button">Log Out</button>
        </div>
        <% end %>
      </div>

      <% flash.each do |name, msg| %>
  			<%= content_tag(:div, msg, class: "alert") %>
  		<% end %>

  		<%= yield %>


  </div>

</body>
</html>
